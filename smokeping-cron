#!/bin/bash

NOW=$(date +%s)

TARGET_URL="https://raw.githubusercontent.com/gslin/smokeping-config.d/master/Targets.custom?v=${NOW}"
TARGET_CONTENT=$(curl -s "${TARGET_URL}")

TARGET_OLDHASH=$(sha256sum /etc/smokeping/config.d/Targets.custom | awk '{print $1}')
TARGET_NEWHASH=$(echo "${TARGET_CONTENT}" | sha256sum | awk '{print $1}')

/usr/bin/logger -p local0.info -t smokeping-cron "Existing \"Targets.custom\" hash: ${TARGET_OLDHASH}."
/usr/bin/logger -p local0.info -t smokeping-cron "Network \"Targets.custom\" hash: ${TARGET_NEWHASH}."

if [[ "${TARGET_OLDHASH}" = "${TARGET_NEWHASH}" ]]; then
    exit
fi

/usr/bin/logger -p local0.notice -t smokeping-cron "Updating \"Targets.cutsom\"."

echo "${TARGET_CONTENT}" > /etc/smokeping/config.d/Targets.custom

/usr/sbin/service smokeping restart
/usr/sbin/service smokeping-fcgi restart
